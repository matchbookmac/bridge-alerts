<?xml version='1.0' encoding='utf-8'?>
<widget id="com.multco.bridges" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ParsePushNotificationPlugin">
        <param name="android-package" value="com.cranberrygame.cordova.plugin.pushnotification.parsepushnotification.ParsePushNotificationPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="hdpi" height="72" src="www/img/icon/android/hdpi.png" width="72" />
    <icon density="ldpi" height="36" src="www/img/icon/android/ldpi.png" width="36" />
    <icon density="mdpi" height="52" src="www/img/icon/android/mdpi.png" width="48" />
    <icon density="xhdpi" height="96" src="www/img/icon/android/xhdpi.png" width="96" />
    <icon density="xxhdpi" height="144" src="www/img/icon/android/xxhdpi.png" width="144" />
    <icon density="xxxhdpi" height="192" src="www/img/icon/android/xxxhdpi.png" width="192" />
    <splash density="land-ldpi" src="www/img/splash/android/splash-land-ldpi.png" />
    <splash density="land-mdpi" src="www/img/splash/android/splash-land-mdpi.png" />
    <splash density="land-hdpi" src="www/img/splash/android/splash-land-hdpi.png" />
    <splash density="land-xhdpi" src="www/img/splash/android/splash-land-xhdpi.png" />
    <splash density="land-xxhdpi" src="www/img/splash/android/splash-land-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="www/img/splash/android/splash-land-xxxhdpi.png" />
    <splash density="port-hdpi" src="www/img/splash/android/splash-port-hdpi.png" />
    <splash density="port-ldpi" src="www/img/splash/android/splash-port-ldpi.png" />
    <splash density="port-mdpi" src="www/img/splash/android/splash-port-mdpi.png" />
    <splash density="port-xhdpi" src="www/img/splash/android/splash-port-xhdpi.png" />
    <splash density="port-xxhdpi" src="www/img/splash/android/splash-port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="www/img/splash/android/splash-port-xxxhdpi.png" />
    <name>Bridges</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <access origin="*" />
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
</widget>
