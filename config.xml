<?xml version='1.0' encoding='utf-8'?>
<widget id="com.multco.bridges" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bridges</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <access origin="*" />
    <content src="index.html" />
    <!-- <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature>
    <feature name="InAppBrowser">
        <param name="ios-package" value="CDVInAppBrowser" />
    </feature> -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.0.1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" height="72" src="www/img/icon/android/hdpi.png" width="72" />
        <icon density="ldpi" height="36" src="www/img/icon/android/ldpi.png" width="36" />
        <icon density="mdpi" height="52" src="www/img/icon/android/mdpi.png" width="48" />
        <icon density="xhdpi" height="96" src="www/img/icon/android/xhdpi.png" width="96" />
        <icon density="xxhdpi" height="144" src="www/img/icon/android/xxhdpi.png" width="144" />
        <icon density="xxxhdpi" height="192" src="www/img/icon/android/xxxhdpi.png" width="192" />
        <splash density="land-hdpi" src="www/img/splash/android/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="www/img/splash/android/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="www/img/splash/android/splash-land-mdpi.png" />
        <splash density="land-hdpi" src="www/img/splash/android/splash-land-hdpi.png" />
        <splash density="land-xhdpi" src="www/img/splash/android/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="www/img/splash/android/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="www/img/splash/android/splash-land-xxxhdpi.png" />
        <splash density="port-hdpi" src="www/img/splash/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="www/img/splash/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="www/img/splash/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="www/img/splash/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="www/img/splash/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="www/img/splash/android/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/img/icon/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="www/img/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/img/icon/ios/icon-60@2x.png" width="120" />
        <icon height="40" src="www/img/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="www/img/icon/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="www/img/icon/ios/icon.png" width="57" />
        <icon height="114" src="www/img/icon/ios/icon@2x.png" width="114" />
        <icon height="29" src="www/img/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/img/icon/ios/icon-small@2x.png" width="58" />
        <splash height="650" src="www/img/splash/ios/Default-Landscape-568h@2x~iphone.png" width="1136" />
        <splash height="1334" src="www/img/splash/ios/Default-667h.png" width="750" />
